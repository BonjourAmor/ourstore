
  <div class="container">
    <div class="carousel-inner">
      <div class="item active">
        <img src="http://oqccu0u8y.bkt.clouddn.com/20170300-rings_stackable-hero.jpg">
      </div>
    </div>

    <div class="productList-wrap mt30 bc">
      <div class="row">
        <% @products.each do |product| %>
          <div class="col-xs-6 col-md-3 product-content">
            <%= link_to product_path(product) do %>
              <% if product.image.present? %>
                <%= image_tag(product.image.thumb.url, class: "thumbnail wow pulse", data: {wow_delay: "2s" }) %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
            <% end %>
            <div class="product-info">
              <p>  <%= link_to(product.title , product_path(product)) %></p>
              <p>$ <%= product.price %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>


